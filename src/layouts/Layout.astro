---
export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Profesor Anibal Osorio Casta√±o - Educador del municipio de Hispania',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
